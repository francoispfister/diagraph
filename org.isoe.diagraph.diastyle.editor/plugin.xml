<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="org.isoe.diagraph.diastyle.presentation.DiastyleModelWizardID"
            name="%_UI_DiastyleModelWizard_label"
            class="org.isoe.diagraph.diastyle.presentation.DiastyleModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/DiastyleModelFile.gif">
         <description>%_UI_DiastyleModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="org.isoe.diagraph.diastyle.presentation.DiastyleEditorID"
            name="%_UI_DiastyleEditor_label"
            icon="icons/full/obj16/DiastyleModelFile.gif"
            extensions="diastyle"
            class="org.isoe.diagraph.diastyle.presentation.DiastyleEditor"
            contributorClass="org.isoe.diagraph.diastyle.presentation.DiastyleActionBarContributor">
      </editor>
   </extension>

</plugin>
